<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Button Content="Hello World"/>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryColor}"></Setter>
        <Setter Property="IsVisible" Value="True"></Setter>
        <Setter Property="CornerRadius" Value="12"></Setter>
        <Setter Property="Padding" Value="40,12"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryHover}"></Setter>
    </Style>

    <Style Selector="Button:disabled">
        <Setter Property="IsVisible" Value="True"></Setter>
    </Style>

    <Style Selector="Button:disabled /template/ ContentPresenter">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="#9E9E9E"></Setter>
        <Setter Property="Opacity" Value="0.6"></Setter>
    </Style>

    <!-- Transparent buttons for social media icons -->
    <Style Selector="Button.transparent">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
    </Style>

    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Opacity" Value="0.7"></Setter>
    </Style>

    <Style Selector="Button.transparent:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Opacity" Value="0.5"></Setter>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="CaretBrush" Value="Black"/>
        <Setter Property="BorderBrush" Value="#c9c9c9"></Setter>
    </Style>

    <Style Selector="TextBox /template/ Border#border">
		<Setter Property="Background" Value="#F0F0F0"></Setter>
        <Setter Property="BorderBrush" Value="#F0F0F0"></Setter>
    </Style>

    <Style Selector="TextBox:pointerover /template/ Border#border">
		<Setter Property="Background" Value="#F0F0F0"></Setter>
        <Setter Property="BorderBrush" Value="#b8b8b8"></Setter>
    </Style>

    <Style Selector="TextBox:focus /template/ Border#border">
		<Setter Property="Background" Value="#fcfcfc"></Setter>
        <Setter Property="BorderBrush" Value="#9e9e9e"></Setter>
    </Style>

    <Styles.Resources>
        <!-- normal -->
        <SolidColorBrush x:Key="TextControlBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextControlBorderBrush" Color="#000000"/>

        <!-- hover -->
        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#696666"/>

        <!-- focus -->
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#FCFCFC"/>
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#000000"/>

        <!-- optional: remove the blue glow/focus ring -->
        <Thickness x:Key="TextControlBorderThemeThicknessFocused">1</Thickness>
      </Styles.Resources>
</Styles>
