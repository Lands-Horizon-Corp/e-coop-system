<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ECoopSystem.ViewModels"
             x:DataType="vm:BlockingViewModel"
             x:Class="ECoopSystem.Views.BlockingView">

  <Border Background="White" Padding="32">
	  <StackPanel Spacing="12" MaxWidth="520" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center">
          <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold"/>
          <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Opacity="0.8"/>
          <TextBlock Text="You can close the app and try again later." Opacity="0.7"/>
      </StackPanel>
  </Border>
</UserControl>
