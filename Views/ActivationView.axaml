<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ECoopSystem.ViewModels"
             x:DataType="vm:ActivationViewModel"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             Width="1280" Height="720"
             MinWidth="1280" MinHeight="720"
             x:Class="ECoopSystem.Views.ActivationView"
             Background="White">

  <Grid ColumnDefinitions="1.15*, 1*"
          ColumnSpacing="12"
          Background="White">

	    <StackPanel Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="420"
                    Spacing="64">

            <!-- Activation Form - Visible when NOT activated -->
            <StackPanel Orientation="Vertical"
                        Spacing="64"
                        IsVisible="{Binding ShowActivationForm}">
                <StackPanel Orientation="Vertical"
                            Spacing="5">
                    <Border CornerRadius="8"
                            ClipToBounds="True"
                            HorizontalAlignment="Left"
                            Height="52"
                            Width="54">
				        <Image Source="/Assets/Images/logo.png"/>
                    </Border>

                    <TextBlock Text="Activate License"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryColor}"/>

                    <TextBlock Text="Welcome to E-cooperative - Let's activate your license key"
                                FontSize="12"
                                Foreground="{DynamicResource PrimaryColor}"/>
                </StackPanel>

                <!-- FORM -->
                <StackPanel Orientation="Vertical"
                            Spacing="10">

                    <StackPanel Orientation="Horizontal">
                        <Image Source=""
                            MaxHeight="12"
                            MaxWidth="12"/>
                    <TextBlock Text="License Key"
                            FontSize="12"
                            Foreground="{DynamicResource PrimaryColor}"/>
                    </StackPanel>

                    <TextBox PasswordChar="*"
                             FontSize="12"
                             Width="340"
                             Text="{Binding LicenseKey, Mode=TwoWay}"
                             Foreground="{DynamicResource PrimaryColor}"/>

                    <TextBlock Text="Enter your license key"
                               FontSize="11"
                               Foreground="{DynamicResource PrimaryColor}"/>

                    <Button Content="Activate License"
                            Background="{DynamicResource PrimaryColor}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsEnabled="{Binding CanActivate}"
                            Click="OnActivateClicked"/>

                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <Border Width="150"
                                Height="1"
                                Background="{DynamicResource PrimaryColor}"
                                Opacity="0.5"/>

                        <TextBlock Text="or"
                                    FontSize="12"
                                    Foreground="#363636"/>

                        <Border Width="150"
                                Height="1"
                                Background="{DynamicResource PrimaryColor}"
                                Opacity="0.5"/>
                    </StackPanel>
                    
                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="3">
                        <TextBlock Text="Need Help? "
                                   FontSize="11"
                                   Foreground="{DynamicResource PrimaryColor}"/>
                        <Button Content="Contact Support"
                                FontSize="11"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryColor}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Cursor="Hand"
                                Click="OnContactSupportClicked"
                                Tag="https://e-coop-suite.com/contact">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                </Style>
                                <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                </Style>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>

                    <TextBlock Text="{Binding Error}"
                               Foreground="Red"
                               FontSize="11"
                               IsVisible="{Binding Error}"
                               TextWrapping="Wrap"
                               MaxWidth="340"/>

                    <TextBlock Text="{Binding LockoutMessage}"
                               Foreground="#B45309"
                               FontSize="11"
                               IsVisible="{Binding LockoutMessage}"
                               TextWrapping="Wrap"
                               MaxWidth="340"/>

                </StackPanel>
            </StackPanel>

            <!-- Success Screen - Visible when activated -->
            <StackPanel Orientation="Vertical"
                        Spacing="24"
                        IsVisible="{Binding ShowSuccessScreen}">
                <StackPanel Orientation="Vertical"
                            Spacing="20"
                            HorizontalAlignment="Center">
                    <!-- Success Icon -->
                    <Grid Width="80" Height="80" HorizontalAlignment="Center">
                        <Ellipse Width="80" 
                                 Height="80" 
                                 Fill="#50e893"/>
                        <Canvas Width="80" Height="80">
                            <Path Data="M 20 40 L 35 55 L 60 25" 
                                  Stroke="White" 
                                  StrokeThickness="6"
                                  StrokeLineCap="Round"/>
                        </Canvas>
                    </Grid>

                    <TextBlock Text="License Activated!"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryColor}"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Welcome to E-cooperative Suite! Your license is now active."
                               FontSize="12"
                               Foreground="{DynamicResource PrimaryColor}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="340"/>
                </StackPanel>

                <Button Content="Get Started"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Click="OnGoToDashboardClicked"/>
            </StackPanel>

            <!-- Social Media Section - Always visible at bottom -->
            <StackPanel Spacing="10">

                <TextBlock Text="Connect with us"
                           FontSize="12"
                           Foreground="{DynamicResource PrimaryColor}"
                           HorizontalAlignment="Center"/>

                <Border Width="200"
                        Height="1"
                        Background="{DynamicResource PrimaryColor}"
                        Opacity="0.5"
                        HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10">

                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="https://www.facebook.com/profile.php?id=61578596159950"
                            ToolTip.Tip="Facebook">
                        <Image Source="/Assets/Icons/facebook.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>
                    
                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="https://x.com/Lands_Horizon"
                            ToolTip.Tip="X (Twitter)">
                        <Image Source="/Assets/Icons/twitter.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>
                    
                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="https://www.linkedin.com/company/landshorizon"
                            ToolTip.Tip="LinkedIn">
                        <Image Source="/Assets/Icons/linkedin.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>
                    
                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="https://www.youtube.com/@landshorizon"
                            ToolTip.Tip="YouTube">
                        <Image Source="/Assets/Icons/youtube.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>
                    
                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="https://github.com/Lands-Horizon-Corp"
                            ToolTip.Tip="GitHub">
                        <Image Source="/Assets/Icons/github.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>
                    
                    <Button Classes="transparent"
                            Padding="0" 
                            Cursor="Hand"
                            Click="OnSocialMediaClicked"
                            Tag="mailto:lands.horizon.corp@gmail.com"
                            ToolTip.Tip="Email: lands.horizon.corp@gmail.com">
                        <Image Source="/Assets/Icons/email.png" Width="{StaticResource IconSize}" Height="{StaticResource IconSize}"/>
                    </Button>

                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1"
                Margin="3"
                CornerRadius="12"
                ClipToBounds="True">

            <Grid>
				<Image Source="/Assets/Images/activation_image.png"
                   Stretch="UniformToFill"/>

                <Button Content="X"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="12"
                        Padding="0"
                        Background="#66000000"
                        Foreground="WhiteSmoke"
                        CornerRadius="18"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="OnCloseClicked"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
