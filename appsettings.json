{
  "ApiSettings": {
    "BaseUrl": "https://e-coop-server-production.up.railway.app/",
    "Timeout": 12,
    "MaxRetries": 3,
    "MaxResponseSizeBytes": 1048576
  },
  "WebViewSettings": {
    "BaseUrl": "https://e-coop-client-production.up.railway.app/",
    "TrustedDomains": [
      "e-coop-client-development.up.railway.app",
      "e-coop-client-production.up.railway.app",
      "e-coop-suite.com",
      "ecoopsuite.com"
    ],
    "AllowHttp": false
  },
  "Security": {
    "GracePeriodDays": 7,
    "MaxActivationAttempts": 3,
    "LockoutMinutes": 5,
    "ActivationLookbackMinutes": 1,
    "BackgroundVerificationIntervalMinutes": 1
  },
  "Application": {
    "Name": "ECoopSystem",
    "Version": "1.0.0",
    "MinimumLoadingTimeSeconds": 5,
    "WindowWidth": 1280,
    "WindowHeight": 720
  },
  "Logging": {
    "EnableDebugLogging": false,
    "LogLevel": "Warning"
  }
}
